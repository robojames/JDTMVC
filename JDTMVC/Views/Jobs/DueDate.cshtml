@model IEnumerable<JDTMVC.Models.Job>

@{
    ViewBag.Title = "Due Date Summary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="CenteredContent">

    <h2>Due Date Summary</h2>


    <table class="DueDateSummary">

        <tr class="CenteredContent">
            <th>
                @Html.DisplayNameFor(model => model.Engineer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.curr_Revision)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.customer_Name)
            </th>
            <th> 
                @Html.DisplayNameFor(model => model.ReportWritten)
            </th>
            <th>
                <!--@Html.DisplayNameFor(model => model.Report_Initial_Check) -->
                Initial Check
            </th>
            <th>
                <!--@Html.DisplayNameFor(model => model.Report_Final_Check) -->
                Final Check
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comments)
            </th>

            <th>Options</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="CenteredContent">
                <td>
                    @Html.DisplayFor(modelItem => item.Engineer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.curr_Revision)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.customer_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReportWritten)
                </td>
                <td>
                    @if (item.Report_Initial_Check == null)
                    {
                        <div class="redbox">&nbsp</div>
                    }
                    else
                    {
                        <div class="greenbox">&nbsp</div>
                    }
                </td>
                <td> @* Need to update this to fill the entire td with the red or green coloring *@
                    @if (item.Report_Final_Check == null)
                    {
                        <div class="redbox">&nbsp</div>
                    }
                    else
                    {
                        <div class="greenbox">&nbsp</div>
                    }
                </td>
                <td style="width:200px;">
                    @Html.DisplayFor(modelItem => item.Comments)
                </td>

                <td>
                    @Html.ActionLink("View Details", "Edit", new { id = item.Id })
                </td>
            </tr>
     
        }



    </table>
</div>